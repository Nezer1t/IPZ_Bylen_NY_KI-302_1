<Window
    Height="550"
    MaxHeight="550"
    MaxWidth="800"
    MinHeight="550"
    MinWidth="800"
    Title="Реєстрація"
    Width="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab4_3.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab4_3.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"
                Text="Реєстрація" />
            <Grid
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Content="Логін"
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center" />
                <TextBox
                    Grid.Column="1"
                    Grid.Row="0"
                    Height="40"
                    Margin="0,0,0,20"
                    Text="{Binding Login}"
                    TextWrapping="Wrap"
                    VerticalContentAlignment="Center"
                    Width="300" />

                <Label
                    Content="Пароль"
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center" />
                <TextBox
                    Grid.Column="1"
                    Grid.Row="1"
                    Height="40"
                    Margin="0,0,0,20"
                    Text="{Binding Password}"
                    TextWrapping="Wrap"
                    VerticalContentAlignment="Center"
                    Width="300" />

                <Label
                    Content="Підтвердження паролю"
                    Grid.Column="0"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center" />
                <TextBox
                    Grid.Column="1"
                    Grid.Row="2"
                    Height="40"
                    Margin="0,0,0,20"
                    Text="{Binding ConfirmationPassword}"
                    TextWrapping="Wrap"
                    VerticalContentAlignment="Center"
                    Width="300" />
            </Grid>
            <TextBlock
                HorizontalAlignment="Right"
                Margin="0,0,0,20"
                MouseLeftButtonDown="GoToSignIn"
                Text="Вже маєте акаунт? Залогінтесь" />
            <Button
                Click="RegisterClick"
                Content="Зареєструватися"
                Height="45"
                HorizontalAlignment="Center"
                Width="200" />
        </StackPanel>
    </Grid>
</Window>