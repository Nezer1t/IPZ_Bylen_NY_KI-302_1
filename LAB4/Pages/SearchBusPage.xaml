<Window
    Height="550"
    MaxHeight="550"
    MaxWidth="900"
    MinHeight="500"
    MinWidth="800"
    Title="Купівля квитків"
    Width="900"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab4_3.Pages.SearchBusPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab4_3.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,20,0,20"
            Orientation="Horizontal">
            <Button
                Click="CloseClick"
                Content="Вийти"
                Height="40"
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                Width="150" />
            <TextBox
                Height="40"
                HorizontalAlignment="Center"
                Margin="0,0,20,0"
                Name="SearchTextBox"
                TextChanged="SearchByName"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Width="300" />
            <DatePicker
                Height="40"
                HorizontalAlignment="Right"
                Margin="0,0,0,0"
                Name="SearchDatePicker"
                SelectedDateChanged="SearchByData"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Width="200" />
        </StackPanel>

        <ListView
            Grid.Row="1"
            Height="380"
            Margin="0,20,0,0"
            Name="TripsListBox"
            SelectionChanged="TripsListBox_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding TripName}"
                        Header="Назва рейсу"
                        Width="200" />
                    <GridViewColumn
                        DisplayMemberBinding="{Binding StartDate}"
                        Header="Час відправлення"
                        Width="200" />
                    <GridViewColumn Header="Вільних місць" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding AmountSeats}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Номер автобуса" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BusName}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>