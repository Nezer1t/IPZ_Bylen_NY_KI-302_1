<Window
    Height="500"
    ResizeMode="CanResize"
    Title="Придбання квитків"
    Width="1100"
    WindowStartupLocation="CenterScreen"
    x:Class="lab2_3.Pages.BusSeatsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,20,0,20"
            Text="Вибір місць в автобусі" />

        <Grid
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,30,0,0"
            Name="SeatsGrid"
            VerticalAlignment="Top" />

        <Button
            Click="BuyTicketsClick"
            Content="Купити та оцінити"
            Grid.Row="2"
            Height="40"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            VerticalAlignment="Bottom"
            Visibility="Collapsed"
            Width="400"
            x:Name="BuyButton" />

        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Margin="0,20,0,10"
            Orientation="Horizontal"
            VerticalAlignment="Bottom">
            <TextBlock
                Margin="0,0,10,0"
                Text="Оцінка:"
                VerticalAlignment="Center" />
            <TextBox
                Height="30"
                PreviewTextInput="RatingTextBox_PreviewTextInput"
                TextChanged="RatingTextBox_TextChanged"
                Width="60"
                x:Name="RatingTextBox" />
            <Button
                Click="CloseClick"
                Content="Закрити"
                Height="30"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Width="100" />
        </StackPanel>
    </Grid>
</Window>